<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="QTerminal">
    <action name="Execute"><execute>qterminal</execute></action>
  </item>
  <item label="Brave Browser">
    <action name="Execute"><execute>brave-browser</execute></action>
  </item>
  <item label="Chromium">
    <action name="Execute"><execute>chromium</execute></action>
  </item>
  <item label="KeepassXC">
    <action name="Execute"><execute>keepassxc</execute></action>
  </item>
  <!-- This requires the presence of the 'obamenu' package to work 
  <menu id="/Debian" />
  -->
	
  <separator />
  <menu id="applications-menu" label="Applications" execute="/usr/bin/obamenu"/>
  <separator />
  <item label="ObConf">
    <action name="Execute"><execute>obconf</execute></action>
  </item>
  <item label="Reconfigure">
    <action name="Reconfigure"/>
  </item>
  <separator />
  <item label="Quit Openbox">
    <action name="Exit"/>
  </item>
  <item label="Restart">
    <action name="Restart"/>
  </item>
  <item label="Shutdown">
    <action name="Execute"><execute>shutdown now</execute></action>
  </item>
</menu>
</openbox_menu>
